@model SMA_21296.Models.Receita

@{
    ViewData["Title"] = "Adicionar";
}

<h1>Adicionar nova receita</h1>

<h4>Receita</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicoFK" class="control-label"></label>
                <select asp-for="MedicoFK" class ="form-control" asp-items="ViewBag.MedicoFK"></select>
            </div>
            <div class="form-group">
                <label asp-for="PacienteFK" class="control-label"></label>
                <select asp-for="PacienteFK" class ="form-control" asp-items="ViewBag.PacienteFK"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
